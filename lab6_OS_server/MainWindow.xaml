<Window x:Name="main" x:Class="lab6_OS_server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab6_OS_server"
        mc:Ignorable="d"
        Title="Server" Height="450" Width="450">
    <Grid Background="#FFE1F0DA" Margin="0,0,2,0">
        <TextBlock HorizontalAlignment="Left" Margin="160,225,0,0" TextWrapping="Wrap" Text="Data to client" VerticalAlignment="Top" Height="40" Width="110" FontFamily="Baskerville Old Face" FontSize="18" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" Margin="150,50,0,0" TextWrapping="Wrap" Text="Data from client" VerticalAlignment="Top" Height="40" Width="140" FontFamily="Baskerville Old Face" FontSize="18" FontWeight="Bold"/>
        <TextBlock x:Name="fromClient" TextWrapping="Wrap" Margin="45,85,41,255" Background="White"/>
        <TextBlock x:Name="toClient" TextWrapping="Wrap" Margin="45,265,41,79" Background="White" FontFamily="Baskerville Old Face"/>

        <Border BorderBrush="Black" BorderThickness="1" Margin="45,85,40,254"/>
        <Border BorderBrush="Black" BorderThickness="1" Margin="45,265,40,79"/>

    </Grid>
</Window>
